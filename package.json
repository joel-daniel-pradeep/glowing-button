{
  "name": "glowing-button",
  "version": "1.0.0",
  "description": "A reusable glowing button React component built with TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --clean --no-sourcemap",
    "prepare": "npm run build"
  },
  "keywords": ["react", "typescript", "button", "glow", "component"],
  "author": "Joel Daniel Pradeep",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joel-daniel-pradeep/glowing-button.git"
  },
  "bugs": {
    "url": "https://github.com/joel-daniel-pradeep/glowing-button/issues"
  },
  "homepage": "https://github.com/joel-daniel-pradeep/glowing-button#readme"
}
